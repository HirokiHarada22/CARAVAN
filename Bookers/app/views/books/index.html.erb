<h2 class="book-title">Books</h2>

<body>
<table>
	<thead>
		<tr>

			<td class="list-title"><strong>Title</strong></td>

			<td class="list-title"><strong>Body</strong></td>
		</tr>
	</thead>
	<tbody>


<% @books.each do |book| %>
	<tr>
		<td><%= book.title %></td>

		<td><%= book.body %></td>
		<td><%= link_to 'Show', book_path(book.id) %></td>
		<td><%= link_to 'Edit', edit_book_path(book.id) %></td>
		<td><%= link_to 'Destroy', destroy_book_path(book.id), method: :delete, data: {confirm:'Are you sure?'} %></td>
	</tr>
<% end %>
	</tbody>
</table>
<div class="new-book-box">
	<h2 class="book-new-title">New book</h2>
	<%= form_for(@book) do |f| %>
		<h4 class="list-new-title">Title</h4>
		<%= f.text_field :title %>
		<h4 class="list-new-title">Body</h4>
		<%= f.text_area :body %>
	<div class="submit-action">
		<%= f.submit 'Create Book' %>
	</div>
<% end %>
</div>
</body>