<p id="notice">
	<%= notice %>
</p>
<body>
<h2 class="edit-title">Editing Book</h2>
<%= form_for(@book) do |f| %>
	<h4 class="edit-list">Title</h4>
	<%= f.text_field :title %>
	<h4 class="edit-list">Body</h4>
	<%= f.text_area :body %>
	<div class="submit-action">
	<%= f.submit 'Update Book' %>
</div>
<p class="action"><%= link_to "Show", book_path(@book.id) %> | 
<%= link_to "Back", index_book_path(@book.id) %></p>
<% end %>
</body>